<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="450.0" styleClass="modal-background" stylesheets="@modal-styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller.AvaliacaoModalController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="form-pane" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="40.0">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label styleClass="form-title" text="Registrar Avaliação" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" styleClass="close-button" text="X" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>

                <GridPane hgap="10.0" styleClass="info-grid" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label styleClass="info-label" text="Obra:" />
                        <Label styleClass="info-label" text="Autor:" GridPane.rowIndex="1" />
                        <Label fx:id="tituloLabel" styleClass="info-value" text="[Título da Obra]" GridPane.columnIndex="1" />
                        <Label fx:id="autorLabel" styleClass="info-value" text="[Nome do Autor]" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>

                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="Parecer Final" />
                        <ComboBox fx:id="statusComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione um parecer" styleClass="form-input" />
                    </children>
                </VBox>

                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="form-label" text="Justificativa / Parecer Descritivo" />
                        <TextArea fx:id="parecerTextArea" prefHeight="200.0" styleClass="form-input" wrapText="true" />
                    </children>
                </VBox>

                <Button fx:id="btnSalvar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSalvarAvaliacao" styleClass="form-button" text="Salvar Avaliação" />
            </children>
        </VBox>
    </children>
</AnchorPane>