<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" styleClass="modal-background" stylesheets="@modal-styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller.NovaObraController">
    <children>

        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="50.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" styleClass="form-pane" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label styleClass="form-title" text="Nova Obra" />
                        <Region HBox.hgrow="ALWAYS" /> <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" styleClass="close-button" text="X" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>



                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="Título" />
                        <TextField fx:id="tituloField" promptText="Ex: Dom Casmurro" styleClass="form-input" />
                    </children>
                </VBox>

                <VBox spacing="5.0" >
                    <children>
                        <Label styleClass="form-label" text="Ano" />
                        <TextField fx:id="AnoBox" maxWidth="1.7976931348623157E308" promptText="Selecione um Ano" styleClass="form-input" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="Autor" />
                        <ComboBox fx:id="autorComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione um autor" styleClass="form-input" />
                    </children>
                </VBox>

                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="form-label" text="Gênero" />
                        <ComboBox fx:id="generoComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione um gênero" styleClass="form-input" />
                    </children>
                </VBox>


                <Button fx:id="btnAdicionar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAdicionarObra" styleClass="form-button" text="Adicionar" />
            </children>
        </VBox>

    </children>
</AnchorPane>